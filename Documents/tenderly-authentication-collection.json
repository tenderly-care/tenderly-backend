{
  "info": {
    "name": "Tenderly Authentication",
    "_postman_id": "12345678-1234-5678-1234-567812345678",
    "description": "A collection to test Tenderly authentication API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Registration",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+911234567890\",\n  \"password\": \"Test12345!\",\n  \"role\": \"patient\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "auth", "register"]
        }
      }
    },
    {
      "name": "Email Verification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"your_verification_token_here\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/auth/verify-email",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "auth", "verify-email"]
        }
      }
    },
    {
      "name": "MFA Setup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"method\": \"authenticator\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/auth/mfa/setup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "auth", "mfa", "setup"]
        }
      }
    },
    {
      "name": "MFA Setup Verification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"method\": \"authenticator\",\n  \"code\": \"your_verification_code_here\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/auth/mfa/verify-setup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "auth", "mfa", "verify-setup"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"Test12345!\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "auth", "login"]
        }
      }
    }
  ]
}
